<html lang="en">
<%- include("./partials/head.ejs") %>
<%- include("./partials/style.ejs") %>
<body>
  <%- include("./partials/nav.ejs") %>
  <div class="search">
    <form action="/search" method="GET">
     <input name="cityname" id="cityname" type="text" placeholder="Search">
     <!-- <button>Search</button> -->
     <input type="submit" value="FIND">
    </form>
  </div>

  <div class="places content">
    <h2>Recently~Added</h2>
    <% if (city.length > 0) { %>
      <% city.forEach(x => { %>
        <a href="<%=x._id%>">
        <h1 class="title"><%= x.name %></h1>
        <p class="snippet"><%= x.pincode %></p>
        </a>
      <% }) %>
    <% } else { %>
      <p>There are no city added in name of <%= name%>...</p>
    <% } %>
  </div>
</body>
</html>